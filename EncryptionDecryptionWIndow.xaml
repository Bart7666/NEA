<Window x:Class="NEA.EncryptionDecryptionWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NEA"
        mc:Ignorable="d"
        Title="BreakEncrypt-Ciphers" Icon="/Images/Colour Palette.ico" Height="450" Width="800" MinHeight="40" MinWidth="200" WindowStyle="None" Style="{DynamicResource Window}" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"/>
    </WindowChrome.WindowChrome>
    <Border Style="{StaticResource WindowMainPanelStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" >
                <!--Title Bar-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="HomeButton" Click="HomeButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height="40" Width="40" Style="{DynamicResource Button}">
                    <Image Source="/Images/Lock.jpg" />
                </Button>
                <Button x:Name="SettingsButton" Click="SettingsButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height ="30" Width="30" Margin="5,5,5,5" Grid.Column="2" Style="{DynamicResource Button}">
                    <Image Source="/Images/Settings Cog.png"/>
                </Button>
                <Button x:Name="MinimiseButton" Click="MinimiseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height ="30" Width="30" Margin="5,5,5,5" Grid.Column="3" Style="{DynamicResource Button}">
                    <Canvas>
                        <Path Data="M -8,0 h 16" Style="{DynamicResource Icon Path}"/>
                    </Canvas>
                </Button>
                <Button x:Name="MaximiseButton" Click="MaximiseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height ="30" Width="30" Margin="5,5,5,5" Grid.Column="4" Style="{DynamicResource Button}">
                    <Canvas>
                        <Path Data="M -8,-3 v 10 h 10 v-10 h-10 v1" Style="{DynamicResource Icon Path}"/>
                        <Path Data="M 2,3 h 4 v -10 h-10 v4" Style="{DynamicResource Icon Path}" />
                    </Canvas>
                </Button>
                <Button x:Name="CloseButton" Click="CloseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height ="30" Width="30" Margin="5,5,10,5" Grid.Column="5" Style="{DynamicResource Button}">
                    <Canvas>
                        <Path Data="M -8,-8 8,8 M -8,8 8,-8 " Style="{DynamicResource Icon Path}"/>
                    </Canvas>
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <!-- Window Content -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.05*"/>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="0.1*"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="1">
                    <Label Style="{DynamicResource Label}" Content="Input Field"/>
                </Viewbox>
                <Viewbox Grid.Row="1" Grid.Column="2">
                    <Label Style="{DynamicResource Label}" Content="Output Field"/>
                </Viewbox>
                <TextBox Grid.Row="2" Grid.Column="0" x:Name="InputFieldTBox" Margin="10,5,5,5" Style="{DynamicResource TextBox}" TextWrapping="Wrap" AcceptsReturn="True" />
                <Border Grid.Row="2" Grid.Column="2" Margin="5,5,10,5" Style="{DynamicResource Border}">
                    <TextBlock  x:Name="OutputFieldTBlock" Margin="5" Style="{DynamicResource TextBlock}" TextWrapping="Wrap" TextTrimming="WordEllipsis"/>
                </Border>
                <!-- to do: Make this not awful when changing themes and learn how to do paths/implement custom control to show arrows and the settings-->
                    <Menu  Grid.Row="1" Grid.Column="1" Margin="5" Style="{DynamicResource Menu}">
                        <Viewbox>
                            <Canvas Height="10" Width="10">
                                <Path Data="M -5,5 50,5 " Style="{DynamicResource Icon Path}"/>
                            </Canvas>
                        </Viewbox>
                    </Menu>
                
            </Grid>
        </Grid>
    </Border>
</Window>
