<Window x:Class="NEA.EncryptionDecryptionWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NEA"
        mc:Ignorable="d"
        Title="BreakEncrypt-Ciphers" Icon="/Images/Colour Palette.ico" Height="450" Width="800" MinHeight="40" MinWidth="200" WindowStyle="None" Style="{DynamicResource Window}" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"/>
    </WindowChrome.WindowChrome>
    <Border Style="{StaticResource WindowMainPanelStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" >
                <!--Title Bar-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="HomeButton" Click="HomeButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height="40" Width="40" Style="{DynamicResource Button}">
                    <Image Source="/Images/Lock.jpg" />
                </Button>
                <Button x:Name="SettingsButton" Click="SettingsButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height ="30" Width="30" Margin="5,5,5,5" Grid.Column="2" Style="{DynamicResource Button}">
                    <Image Source="/Images/Settings Cog.png"/>
                </Button>
                <Button x:Name="MinimiseButton" Click="MinimiseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height ="30" Width="30" Margin="5,5,5,5" Grid.Column="3" Style="{DynamicResource Button}">
                    <Canvas>
                        <Path Data="M -8,0 h 16" Style="{DynamicResource Icon Path}"/>
                    </Canvas>
                </Button>
                <Button x:Name="MaximiseButton" Click="MaximiseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height ="30" Width="30" Margin="5,5,5,5" Grid.Column="4" Style="{DynamicResource Button}">
                    <Canvas>
                        <Path Data="M -8,-3 v 10 h 10 v-10 h-10 v1" Style="{DynamicResource Icon Path}"/>
                        <Path Data="M 2,3 h 4 v -10 h-10 v4" Style="{DynamicResource Icon Path}" />
                    </Canvas>
                </Button>
                <Button x:Name="CloseButton" Click="CloseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height ="30" Width="30" Margin="5,5,10,5" Grid.Column="5" Style="{DynamicResource Button}">
                    <Canvas>
                        <Path Data="M -8,-8 8,8 M -8,8 8,-8 " Style="{DynamicResource Icon Path}"/>
                    </Canvas>
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <!-- Window Content -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.05*"/>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="0.1*"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="1">
                    <Label Style="{DynamicResource Label}" Content="Input Field"/>
                </Viewbox>
                <Viewbox Grid.Row="1" Grid.Column="2">
                    <Label Style="{DynamicResource Label}" Content="Output Field"/>
                </Viewbox>
                <TextBox Grid.Row="2" Grid.Column="0" x:Name="InputFieldTBox" Margin="10,5,5,5" Style="{DynamicResource TextBox}" TextWrapping="Wrap" AcceptsReturn="True" />
                <Border Grid.Row="2" Grid.Column="2" Margin="5,5,10,5" Style="{DynamicResource Border}">
                    <TextBlock  x:Name="OutputFieldTBlock" Style="{DynamicResource TextBlock}" TextWrapping="Wrap" TextTrimming="WordEllipsis"/>
                </Border>
                <Viewbox Grid.Column="1" Grid.Row="1" Margin="5,0" >
                    <Button x:Name="EncryptDecryptBtn" Style="{DynamicResource Button}" Content="Encrypt" ToolTip="Select whether to encrypt or decrypt in settings above"  Click="EncryptDecryptBtn_Click"/>
                </Viewbox>
                <Grid x:Name="CipherSettings" Grid.ColumnSpan="3" Margin="10,5" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="110" Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Grid.Row="1" Style="{DynamicResource Border}" >
                        <ComboBox Style="{DynamicResource ComboBox}" IsEditable="False" x:Name="CipherCBox" SelectedIndex="0">
                            <ComboBoxItem Style="{DynamicResource ComboBoxItem}" Visibility="Collapsed">
                                <Label Content="Select Cipher" Style="{DynamicResource Label}"/>
                            </ComboBoxItem>
                            <ComboBoxItem Style="{DynamicResource ComboBoxItem}" x:Name="SelectCaesarCipher" Selected="SelectCaesarCipher_Selected">
                                <Label Content="Caesar Cipher" Style="{DynamicResource Label}" />
                            </ComboBoxItem>
                            <ComboBoxItem Style="{DynamicResource ComboBoxItem}">
                                <Label Content="other Cipher" Style="{DynamicResource Label}"/>
                            </ComboBoxItem>
                            <ComboBoxItem Style="{DynamicResource ComboBoxItem}">
                                <Label Content="and onther Cipher" Style="{DynamicResource Label}"/>
                            </ComboBoxItem>
                        </ComboBox>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="1" Style="{DynamicResource Border}" >
                        <ComboBox Style="{DynamicResource ComboBox}" IsEditable="False" x:Name="EncryptDecryptCBox" SelectedIndex="0">
                            <ComboBoxItem Style="{DynamicResource ComboBoxItem}" Visibility="Collapsed">
                                <Label Content="Encrypt or Decrypt" Style="{DynamicResource Label}"/>
                            </ComboBoxItem>
                            <ComboBoxItem Style="{DynamicResource ComboBoxItem}" x:Name="SelectEncrypt" Selected="SelectEncrypt_Selected">
                                <Label Content="Encrypt" Style="{DynamicResource Label}"/>
                            </ComboBoxItem>
                            <ComboBoxItem Style="{DynamicResource ComboBoxItem}" x:Name="SelectDecrypt" Selected="SelectDecrypt_Selected">
                                <Label Content="Decrypt" Style="{DynamicResource Label}"/>
                            </ComboBoxItem>
                        </ComboBox>
                    </Border>
                    <Border Grid.Column="2" Style="{DynamicResource Border}">
                        <TextBox x:Name="KeyTBox" Style="{DynamicResource TextBox}"/>
                    </Border>
                </Grid>

            </Grid>
        </Grid>
    </Border>
</Window>
