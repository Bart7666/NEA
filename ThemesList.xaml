<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Contains the list of all styles available with a variant required for each control
    To add any new styles a new style is required for each control
    To add any new or (custom) user controls requires a version of each style for each control-->
    <Style TargetType="Menu" x:Key="BaseMenu">
        <Setter Property="Background" Value="White"/>
    </Style>
    <Style TargetType="Menu" x:Key="DarkMenu">
        <Setter Property="BorderBrush" Value="#99b3e6"/>
        <Setter Property="Background" Value="#595959"/>
    </Style>
    <Style TargetType="MenuItem" x:Key="BaseMenuItem">
    </Style>
    <Style TargetType="MenuItem" x:Key="DarkMenuItem">
        <Setter Property="Foreground" Value="#99b3e6"/>
        <Setter Property="Background" Value="#595959"/>
    </Style>
    <Style TargetType="Label" x:Key="BaseLabel">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Style TargetType="Label" x:Key="DarkLabel">
        <Setter Property="Foreground" Value="#99b3e6"/>
    </Style>
    <Style TargetType="Window" x:Key="BaseWindow">
        <Setter Property="BorderBrush" Value="Black"/>
    </Style>
    <Style TargetType="Window" x:Key="DarkWindow">
        <Setter Property="BorderBrush" Value="#99b3e6"/>
        <Setter Property="Background" Value="#595959"/>
    </Style>
    <Style TargetType="Border" x:Key="BaseBorders">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Black"/>
    </Style>
    <Style TargetType="Border" x:Key="DarkBorders">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#99b3e6"/>
        <Setter Property="Background" Value="#595959"/>
    </Style>
    <Style TargetType="Button" x:Key="BaseButton">
        <Setter Property="BorderBrush" Value="Black"/>
    </Style>
    <Style TargetType="Button" x:Key="DarkButton">
        <Setter Property="BorderBrush" Value="#99b3e6"/>
        <Setter Property="Background" Value="#595959"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="BaseTextBlock">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="DarkTextBlock">
        <Setter Property="Foreground" Value="#99b3e6"/>
        <Setter Property="Background" Value="#595959"/>
    </Style>
    <Style TargetType="TextBox" x:Key="BaseTextBox">
        <Setter Property="BorderBrush" Value="DarkGray"/>
    </Style>
    <Style TargetType="TextBox" x:Key="DarkTextBox">
        <Setter Property="BorderBrush" Value="#99b3e6"/>
        <Setter Property="Background" Value="#595959"/>
    </Style>
    <Style TargetType="RadioButton" x:Key="BaseRadioButton">
        <Setter Property="BorderBrush" Value="DarkGray"/>
    </Style>
    <Style TargetType="RadioButton" x:Key="DarkRadioButton">
        <Setter Property="BorderBrush" Value="#99b3e6"/>
        <Setter Property="Background" Value="#595959"/>
    </Style>
</ResourceDictionary>
    