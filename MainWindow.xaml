<Window x:Class="NEA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NEA"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" MinHeight="40" MinWidth="200" WindowStartupLocation="CenterScreen" WindowState="Maximized" Style="{DynamicResource Window}">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <sys:String x:Key="Theme">"Light"</sys:String>
    </Window.Resources>
    <Border Style="{StaticResource WindowMainPanelStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <!-- Title Bar-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="HomeButton" Click="HomeButton_Click" WindowChrome.IsHitTestVisibleInChrome="False" Style="{DynamicResource Button}">
                    <Image Source="/Images/Lock.jpg" />
                </Button>
                <Button x:Name="SettingsButton" Click="SettingsButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height ="30" Width="30" Margin="5,5,5,5" Grid.Column="2" Style="{DynamicResource Button}">
                    <Image Source="/Images/Settings Cog.png"/>
                </Button>
                <Button x:Name="MinimiseButton" Click="MinimiseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Content="-" Height ="30" Width="30" Margin="5,5,5,5" Grid.Column="3" Style="{DynamicResource Button}"/>
                <Button x:Name="MaximiseButton" Click="MaximiseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Content="[]" Height ="30" Width="30" Margin="5,5,5,5" Grid.Column="4" Style="{DynamicResource Button}"/>
                <Button x:Name="CloseButton" Click="CloseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True" Content ="X" Height ="30" Width="30" Margin="5,5,10,5" Grid.Column="5" Style="{DynamicResource Button}"/>
            </Grid>
            <Grid Grid.Row="1">
                <!-- Content of the window-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.25*"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Column="0" Grid.Row="1" Stretch="Uniform">
                    <Button Content="Encryption&#10;      and&#10;Decryption" x:Name="EncryptionDecryptionButton" Click="EncryptionDecryptionButton_Click" Margin="10,5,5,5" Style="{DynamicResource Button}"/>
                </Viewbox>
                <Viewbox Grid.Column="1" Grid.Row="1" Stretch="Uniform">
                    <Button Content="&#10;Networking&#10;"  Margin="5,5,5,5" Style="{DynamicResource Button}"/>
                </Viewbox>
                <Viewbox Grid.Column="2" Grid.Row="1" Stretch="Uniform">
                    <Button Content="  Algorithm&#10;&#10;Comparison"  Margin="5,5,10,5" Style="{DynamicResource Button}"/>
                </Viewbox>
            </Grid>
        </Grid>
    </Border>
</Window>
    