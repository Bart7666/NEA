<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">
    <!-- Contains the list of all controls with a key associated with each so styles can be changed easily -->
    <!-- To add more controls create master key alongside style here and actual styles in ThemesList Dictionary -->
    <Style TargetType="MenuItem" x:Key="MenuItem">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
    </Style>
    <Style TargetType="Button" x:Key="Button">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
    </Style>
    <Style TargetType="Menu" x:Key="Menu">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
        <Setter Property="Background" Value="White"/>
    </Style>
    <Style TargetType="Window" x:Key="Window">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
    <!-- This is used to control the background to each window of the solution -->
    </Style>
    <Style TargetType="TextBlock" x:Key="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
    </Style>
    <Style TargetType="TextBox" x:Key="TextBox">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
    </Style>
    <Style TargetType="Label" x:Key="Label">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
    </Style>
    <Style TargetType="RadioButton" x:Key="RadioButton">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
    </Style>
    <Style TargetType="CheckBox" x:Key="CheckBox">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
    </Style>
    <Style TargetType="Border" x:Key="Border">
        <Setter Property="BorderThickness" Value="0.25"/>
        <Setter Property="BorderBrush" Value="Black"/>
    </Style>
    <Style TargetType="Path" x:Key="Icon Path">
        <Setter Property="Stroke" Value="Black"/>
    </Style>
    <Style TargetType="ComboBox" x:Key="ComboBox">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
    </Style>
    <Style TargetType="ComboBoxItem" x:Key="ComboBoxItem">
        <Setter Property="FontFamily" Value="{DynamicResource CurrentFont}"/>
    </Style>
    <!-- This is to fix the border issue discovered in testing for prototype 1 and is copied code with small alterations-->
    <Style x:Key="WindowMainPanelStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=WindowState}" Value="Maximized">
                <Setter Property="BorderThickness" Value="0" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <FontFamily x:Key="CurrentFont">Segoe UI</FontFamily>






</ResourceDictionary>
    