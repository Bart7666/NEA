<UserControl x:Class="NEA.UpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NEA"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox Grid.RowSpan="3">
            <Grid MinWidth="20">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button  Style="{DynamicResource Button}" Content="/\" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="Up_Click"/>
                <TextBox Style="{DynamicResource TextBox}" x:Name="UpDownCounter" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" Grid.Row="1"/>
                <Button Style="{DynamicResource Button}" Content="\/" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="Down_Click" Grid.Row="2"/>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
